<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/search_bg"
    android:elevation="3dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:id="@+id/energyContainer"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="18dp"
            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameAttack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Burning Darkness" />

            <TextView
                android:id="@+id/txtDescAttack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="This attack does 30 more damage for each Prize card your opponent has taken." />
        </LinearLayout>

        <TextView
            android:id="@+id/txtAttacksScore"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_text_secondary"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>