<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:paddingBottom="26dp"
        android:scrollIndicators="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:src="@drawable/card_example"
                android:contentDescription="TODO"
                tools:src="@drawable/card_example" />

            <TextView
                android:id="@+id/txtTitlePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="PriceCharting"
                android:textColor="@color/color_text_secondary" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="124.0"
                />

            <!-- Ability Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_supporter_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/search_bg"
                android:elevation="3dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="26dp"
               >


                    <TextView
                        android:id="@+id/txtDescriptionResume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:padding="12dp"
                        tools:text="Ability effect goes here..." />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtTitleAttacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="@string/stats_card" />

            <!-- Dynamic Attacks Container -->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_stats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/search_bg"
                android:elevation="3dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="12dp"

                >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">

                  <LinearLayout
                      android:layout_width="326dp"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:padding="12dp">

                      <TextView
                          android:id="@+id/txtStatsSet"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:gravity="center"
                          android:textColor="@color/color_text_secondary"
                          android:textStyle="bold"
                          android:textSize="16sp"
                          tools:text="Ability effect goes here..."
                          />

                      <TextView
                          android:id="@+id/txtSetNumber"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:gravity="center"
                          android:textColor="@color/white"
                          tools:text="Ability effect goes here..." />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical"

                      android:layout_gravity="end"
                      >

                      <ImageView
                          android:id="@+id/imgSymbolSet"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          app:srcCompat="@drawable/ic_launcher_foreground" />
                  </LinearLayout>
              </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Card information" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_info_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/search_bg"
                android:elevation="3dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="12dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txtTitleRarity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/color_text_secondary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                           android:text="Rarity"
                            />

                        <TextView
                            android:id="@+id/txtRarity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            tools:text="Ultra rare" />

                        <TextView
                            android:id="@+id/txtTitleRmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/color_text_secondary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Regulation Mark"
                            />

                        <TextView
                            android:id="@+id/txtRmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            tools:text="I" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        >



                        <TextView
                            android:id="@+id/txtTitleCardFormat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/color_text_secondary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Card format"
                            />

                        <TextView
                            android:id="@+id/txtCardFormat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            tools:text="Standard" />

                        <TextView
                            android:id="@+id/txtTitleIllustration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/color_text_secondary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Illustration"
                            />

                        <TextView
                            android:id="@+id/txtIllustration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            tools:text="I" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Market Prices... -->
            <TextView
                android:id="@+id/txtTitleSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Market Prices" />

            <!-- Reusing the price structure -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/search_bg"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/txtPriceSection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TGCPlayer"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_secondary"
                       />
                    <TextView android:id="@+id/txtPriceValueSection" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="end" android:textColor="@color/white" android:text="124.0" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>